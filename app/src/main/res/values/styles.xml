<resources>
    <!-- Launcher-->
    <!-- Tutorial used for this screen: https://plus.google.com/+AndroidDevelopers/posts/Z1Wwainpjhd -->
    <style name="Launcher" parent="AppTheme"/>
    <style name="Launcher.Splash" parent="AppTheme">
        4
        <item name="android:windowBackground">@drawable/splash</item>
        5
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d63535</item>
        <item name="colorPrimaryDark">#a33232</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImageViewPadding">
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="ImageViewPaddingLand">
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTheme.SubTextTheme">
        <item name="android:textColor">#8a4c4c53</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextFieldTheme">
        <item name="android:background">@drawable/text_field_bg</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ListTextViewTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListSubTextTheme">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">#a33232</item>
    </style>

    <style name="Main_TextViewTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Main_ItemTheme">
        <item name="android:background">@drawable/button_bg</item>
    </style>
</resources>
