<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EF4A4A</item>
        <item name="colorPrimaryDark">#EF4A4A</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImageViewPadding">
        <item name="android:padding">3dp</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTheme.SubTextTheme">
        <item name="android:textColor">#8a4c4c53</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextFieldTheme">
        <item name="android:background">@drawable/text_field_bg</item>
        <item name="android:layout_margin">2dp</item>
    </style>
</resources>