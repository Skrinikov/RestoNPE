<resources>
    <!-- Launcher-->
    <!-- Tutorial used for this screen: https://plus.google.com/+AndroidDevelopers/posts/Z1Wwainpjhd -->
    <style name="Launcher" parent="AppTheme"/>
    <style name="Launcher.Splash" parent="AppTheme">
        4
        <item name="android:windowBackground">@drawable/splash</item>
        5
    </style>

    <style name="error_login" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Login Style -->
    <style name="Login_only" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#FFCDD2</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#FFCDD2</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d63535</item>
        <item name="colorPrimaryDark">#a33232</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- stuff that came with the drawer -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- For the about activity -->
    <style name="ImageViewPadding">
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="AboutDawsonTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AboutSmallTextTheme">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- For the setting activity -->
    <style name="TextViewTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTheme.SubTextTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- for list layout -->

    <style name="ListTextViewTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListSubTextTheme">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- tip calculator -->
    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">#a33232</item>
    </style>

    <style name="Tip_Subtotal">
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/hint_dollar</item>
        <item name="android:inputType">numberDecimal</item>
         <item name="android:textSize">40sp</item>
    </style>

    <!-- index/main layout -->
    <style name="Main_TextViewTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Main_ItemTheme">
        <item name="android:background">@drawable/button_bg</item>
    </style>
</resources>
