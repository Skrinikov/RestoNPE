<resources>
    <!-- About Activity -->
    <style name="AboutDawsonTheme">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="AboutSmallTextTheme">
        <item name="android:textSize">25sp</item>
    </style>

    <!-- For the setting activity -->
    <style name="TextViewTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTheme.SubTextTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- for list layout -->

    <style name="ListTextViewTheme">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ListSubTextTheme">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- index/main layout -->
    <style name="Main_TextViewTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- resto detail -->
    <style name="RestoNameTheme">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="RestoDetailTheme">
        <item name="android:textSize">20sp</item>
    </style>
</resources>